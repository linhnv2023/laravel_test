APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                          # Log level: debug/info/warning/error

# ==========================================
# DATABASE CONFIGURATION - CẤU HÌNH DATABASE
# ==========================================
DB_CONNECTION=mysql                     # Loại database (mysql cho Docker)
DB_HOST=mysql                          # Hostname (tên container Docker)
DB_PORT=3306                           # Port database
DB_DATABASE=laravel                    # Tên database
DB_USERNAME=laravel                    # Username database
DB_PASSWORD=secret                     # Password database (đổi cho production)

# ==========================================
# SESSION CONFIGURATION - CẤU HÌNH SESSION
# ==========================================
SESSION_DRIVER=redis                   # Session driver: redis/database/file
SESSION_LIFETIME=120                   # Session timeout (phút)
SESSION_ENCRYPT=false                  # Encrypt session data
SESSION_PATH=/                         # Session cookie path
SESSION_DOMAIN=null                    # Session cookie domain

# ==========================================
# OTHER DRIVERS - CÁC DRIVER KHÁC
# ==========================================
BROADCAST_CONNECTION=log               # Broadcast driver: log/pusher/redis
FILESYSTEM_DISK=local                  # File storage: local/s3/public
QUEUE_CONNECTION=redis                 # Queue driver: redis/database/sync

# ==========================================
# CACHE CONFIGURATION - CẤU HÌNH CACHE
# ==========================================
CACHE_STORE=redis                      # Cache driver: redis/file/array
CACHE_PREFIX=laravel_cache             # Prefix cho cache keys

# Memcached (không sử dụng trong Docker setup này)
MEMCACHED_HOST=127.0.0.1               # Memcached host

# ==========================================
# REDIS CONFIGURATION - CẤU HÌNH REDIS
# ==========================================
REDIS_CLIENT=phpredis                  # Redis client: phpredis/predis
REDIS_HOST=redis                       # Redis hostname (tên container Docker)
REDIS_PASSWORD=null                    # Redis password (null = không có)
REDIS_PORT=6379                        # Redis port

# ==========================================
# MAIL CONFIGURATION - CẤU HÌNH EMAIL
# ==========================================
MAIL_MAILER=log                        # Mail driver: log/smtp/mailgun/ses
MAIL_SCHEME=null                       # Mail scheme
MAIL_HOST=127.0.0.1                    # SMTP host
MAIL_PORT=2525                         # SMTP port
MAIL_USERNAME=null                     # SMTP username
MAIL_PASSWORD=null                     # SMTP password
MAIL_FROM_ADDRESS="hello@example.com"  # Default from email
MAIL_FROM_NAME="${APP_NAME}"           # Default from name

# ==========================================
# AWS CONFIGURATION - CẤU HÌNH AWS (TÙY CHỌN)
# ==========================================
AWS_ACCESS_KEY_ID=                     # AWS Access Key
AWS_SECRET_ACCESS_KEY=                 # AWS Secret Key
AWS_DEFAULT_REGION=us-east-1           # AWS Region
AWS_BUCKET=                            # S3 Bucket name
AWS_USE_PATH_STYLE_ENDPOINT=false      # S3 path style

# ==========================================
# FRONTEND BUILD - CẤU HÌNH FRONTEND
# ==========================================
VITE_APP_NAME="${APP_NAME}"            # App name cho Vite build

# ==========================================
# DOCKER SPECIFIC - CẤU HÌNH DOCKER
# ==========================================
RUN_MIGRATIONS=false                   # Tự động chạy migrations khi start
RUN_SEEDERS=false                      # Tự động chạy seeders khi start

# ==========================================
# PRODUCTION/CI-CD - CẤU HÌNH PRODUCTION (TÙY CHỌN)
# ==========================================
# Chỉ cần thiết nếu deploy lên AWS với CI/CD
DB_ROOT_PASSWORD=                      # MySQL root password
ECR_REGISTRY=                          # AWS ECR registry URL
JENKINS_URL=                           # Jenkins server URL
JENKINS_API_TOKEN=                     # Jenkins API token
SLACK_WEBHOOK=                         # Slack webhook cho notifications
ECS_SUBNET_ID=                         # AWS ECS subnet ID
ECS_SECURITY_GROUP_ID=                 # AWS ECS security group ID
SNYK_TOKEN=                            # Snyk security scanning token
